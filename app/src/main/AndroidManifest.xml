<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nagl.smartgeoapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.tasks.LengthTaskActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tasks.AreaTaskActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tasks.NotchTaskActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tasks.DirectTaskActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tasks.InverseTaskActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tasks.ConvertTaskActivity"
            android:exported="false" />
        <activity
            android:name=".activities.points.SelectedPointActivity"
            android:exported="false" />
        <activity
            android:name=".activities.points.CreatePointActivity"
            android:exported="false" />
        <activity
            android:name=".activities.InfoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tasks.TasksActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MapActivity"
            android:exported="false" />
        <activity
            android:name=".activities.points.DatabaseActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CoordSystemActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>